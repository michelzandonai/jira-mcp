# =============================================================================
# JIRA AGENT - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit your .env file to version control

# =============================================================================
# JIRA CONFIGURATION
# =============================================================================
# Your Jira instance URL (include https://)
JIRA_SERVER_URL="https://your-domain.atlassian.net"

# Your Jira account email
JIRA_USERNAME="your-email@example.com"

# Your Jira API token
# Generate at: https://id.atlassian.com/manage-profile/security/api-tokens
JIRA_API_TOKEN="your-jira-api-token"

# =============================================================================
# GOOGLE ADK / GEMINI CONFIGURATION
# =============================================================================
# Google API Key for Gemini model access
# Get it from: https://aistudio.google.com/app/apikey
GOOGLE_API_KEY="your-google-api-key"

# Gemini model to use (default: gemini-2.0-flash)
GOOGLE_MODEL="gemini-2.0-flash"

# Whether to use Vertex AI instead of AI Studio (true/false)
GOOGLE_GENAI_USE_VERTEXAI="false"

# Optional: Google Cloud Project ID (only if using Vertex AI)
# GOOGLE_CLOUD_PROJECT="your-gcp-project-id"

# Optional: Vertex AI region (only if using Vertex AI)
# GOOGLE_CLOUD_REGION="us-central1"

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
# Application name and version
APP_NAME="Jira Agent"
APP_VERSION="2.0.0"

# Logging configuration
LOG_LEVEL="INFO"
LOG_FORMAT="json"

# Development/Production mode
ENVIRONMENT="development"

# =============================================================================
# API CONFIGURATION
# =============================================================================
# FastAPI server configuration
API_HOST="127.0.0.1"
API_PORT="8000"

# API security (if needed in the future)
# API_SECRET_KEY="your-secret-key-for-jwt"

# CORS settings (comma-separated origins)
# CORS_ORIGINS="http://localhost:3000,http://localhost:8080"

# =============================================================================
# OPTIONAL: MONITORING AND TELEMETRY
# =============================================================================
# Enable application monitoring (true/false)
ENABLE_MONITORING="false"

# Optional: Application Insights connection string
# APPINSIGHTS_CONNECTION_STRING="your-connection-string"

# Optional: Sentry DSN for error tracking
# SENTRY_DSN="your-sentry-dsn"

# =============================================================================
# OPTIONAL: CACHE CONFIGURATION
# =============================================================================
# Enable caching for API responses (true/false)
ENABLE_CACHE="false"

# Cache TTL in seconds (default: 300 = 5 minutes)
CACHE_TTL="300"

# =============================================================================
# OPTIONAL: RATE LIMITING
# =============================================================================
# Enable rate limiting (true/false)
ENABLE_RATE_LIMITING="false"

# Requests per minute per user
RATE_LIMIT_PER_MINUTE="60"

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Enable debug mode (true/false)
DEBUG="true"

# Enable auto-reload for development (true/false)
AUTO_RELOAD="true"

# Enable detailed error messages (true/false)
DETAILED_ERRORS="true"